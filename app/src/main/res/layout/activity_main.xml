<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.theophrast.fullscreenstyledialog.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="96dp"
            android:src="@mipmap/fsdialog_logo_256" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:text="Fullscreen style dialog"
            android:textSize="26dp" />

        <Button
            android:id="@+id/bt_dialog_noconfirm"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp"
            android:background="@color/colorPrimary"
            android:text="Show Simple Dialog"
            android:textColor="@color/color_white" />

        <Button
            android:id="@+id/bt_dialog_custom"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp"
            android:background="@color/colorPrimary"
            android:text="Custom Layout Dialog"
            android:textColor="@color/color_white" />

        <Button
            android:id="@+id/bt_dialog_input"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp"
            android:background="@color/colorPrimary"
            android:text="Dialog with input"
            android:textColor="@color/color_white" />

    </LinearLayout>
</ScrollView>
