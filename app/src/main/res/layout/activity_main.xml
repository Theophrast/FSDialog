<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.theophrast.fullscreenstyledialog.MainActivity">


    <Button
        android:id="@+id/bt_dialog_simple"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:background="@color/colorPrimary"
        android:text="Show Simple Dialog"
        android:textColor="@color/color_white" />

    <Button
        android:id="@+id/bt_dialog_input"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:background="@color/colorPrimary"
        android:text="Show dialog with input"
        android:textColor="@color/color_white" />

    <Button
        android:id="@+id/bt_dialog_noconfirm"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="Without confirm button"
        android:textColor="@color/color_white" />

</LinearLayout>
